        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn_arma6"
        android:layout_width="@dimen/E_cartaAncho"
        android:layout_height="@dimen/E_cartaAlto"
        android:background="@drawable/arma_tuberia"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_arma5"
        app:layout_constraintEnd_toEndOf="@+id/ivDer"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_arma5"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_arma5" />

