<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_juego"
    tools:context=".ActivityElegirArma">

    <ImageButton
        android:id="@+id/imgbtn_arma1"
        android:layout_width="@dimen/E_cartaAncho"
        android:layout_height="@dimen/E_cartaAlto"
        android:background="@drawable/arma_candelabro"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_arma2"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_arma2"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/ivDer"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_arma2" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvArma1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn_arma1"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_arma1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <ImageButton
        android:id="@+id/imgbtn_arma2"
        android:layout_width="@dimen/E_cartaAncho"
        android:layout_height="@dimen/E_cartaAlto"
        android:background="@drawable/arma_cuerda"
        app:layout_constraintBottom_toTopOf="@+id/imgbtn_arma5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvArma2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn_arma2"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_arma2"
        app:layout_constraintTop_toTopOf="@+id/textView1" />

    <ImageButton
        android:id="@+id/imgbtn_arma3"
        android:layout_width="@dimen/E_cartaAncho"
        android:layout_height="@dimen/E_cartaAlto"
        android:background="@drawable/arma_herramienta"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_arma2"
        app:layout_constraintEnd_toEndOf="@+id/ivDer"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_arma2"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_arma2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvArma3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn_arma3"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_arma3"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/imgbtn_arma4"
        android:layout_width="@dimen/E_cartaAncho"
        android:layout_height="@dimen/E_cartaAlto"
        android:background="@drawable/arma_pistola"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_arma5"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_arma5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_arma5"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvArma4"
