        app:layout_constraintEnd_toEndOf="@+id/imgbtn_arma6"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_arma6"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <ImageView
        android:id="@+id/ivDer"
        android:layout_width="@dimen/E_pergaminoAlto"
        android:layout_height="@dimen/E_pergaminoAncho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fondo_pergamino" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ivDer"
        app:layout_constraintEnd_toEndOf="@+id/ivDer"
        app:layout_constraintStart_toStartOf="@+id/ivDer"
        app:layout_constraintTop_toTopOf="@+id/ivDer">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/txtV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/E_margentxt"
                android:layout_marginRight="@dimen/E_margentxt"
                android:gravity="center"
                android:text="@string/tvArma1"
                android:textColor="@color/negro"
                android:textSize="@dimen/E_texto"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/img_tick1"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/tick" />

            <ImageButton
                android:id="@+id/img_x1"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/x" />

            <ImageButton
                android:id="@+id/img_interrogación1"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/interrogante" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/txtV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/E_margentxt"
                android:layout_marginRight="@dimen/E_margentxt"
                android:gravity="center"
                android:text="@string/tvArma2"
                android:textColor="@color/negro"
                android:textSize="@dimen/E_texto"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/img_tick2"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/tick" />

            <ImageButton
                android:id="@+id/img_x2"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/x" />

            <ImageButton
                android:id="@+id/img_interrogación2"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/interrogante" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/txtV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/E_margentxt"
                android:layout_marginRight="@dimen/E_margentxt"
                android:gravity="center"
                android:text="@string/tvArma3"
                android:textColor="@color/negro"
                android:textSize="@dimen/E_texto"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/img_tick3"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/tick" />

            <ImageButton
                android:id="@+id/img_x3"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/x" />

            <ImageButton
                android:id="@+id/img_interrogación3"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/interrogante" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/txtV4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/E_margentxt"
                android:layout_marginRight="@dimen/E_margentxt"
                android:gravity="center"
                android:text="@string/tvArma4"
                android:textColor="@color/negro"
                android:textSize="@dimen/E_texto"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/img_tick4"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:background="@drawable/tick" />

            <ImageButton
                android:id="@+id/img_x4"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/x" />

            <ImageButton
                android:id="@+id/img_interrogación4"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/interrogante" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/txtV5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/E_margentxt"
                android:layout_marginRight="@dimen/E_margentxt"
                android:gravity="center"
                android:text="@string/tvArma5"
                android:textColor="@color/negro"
                android:textSize="@dimen/E_texto"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/img_tick5"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/tick" />

            <ImageButton
                android:id="@+id/img_x5"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/x" />

            <ImageButton
                android:id="@+id/img_interrogación5"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/interrogante" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/txtV6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/E_margentxt"
