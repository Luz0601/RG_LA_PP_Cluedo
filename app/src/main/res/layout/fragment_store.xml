<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentStore">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_pp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tienda"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/pista3"
                     />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/pista_2"
                   />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/pista13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pista2"
                    android:layout_width="131dp"
                    android:layout_height="49dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/darker_gray"
                    android:drawableRight="@drawable/coint"
                    android:paddingLeft="8dp"
                    android:paddingTop="0dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:text="@string/button_text2"
                    android:drawableEnd="@drawable/coint" />

                <Button
                    android:id="@+id/btn_pista3"
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@android:color/darker_gray"
                    android:drawableRight="@drawable/coint"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="8dp"
                    android:text="@string/button_text1"
                    android:drawableEnd="@drawable/coint"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp" />

                <Button
                    android:id="@+id/btn_pista1"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@android:color/darker_gray"
                    android:drawableRight="@drawable/coint"
                    android:drawableEnd="@drawable/coint"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="8dp"
                    android:text="@string/button_text3" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar1" />

                    <Space
                        android:layout_width="@dimen/H_margen"
                        android:layout_height="@dimen/H_margen" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="167dp"
                        android:src="@drawable/avatar2" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/ico_btn1"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:layout_margin="3dp"
                        android:background="@android:color/darker_gray"
                        android:drawableRight="@drawable/coint"
                        android:drawableEnd="@drawable/coint"
                        android:paddingLeft="8dp"
                        android:paddingTop="0dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp"
                        android:text="@string/button_text2" />

                    <Space
                        android:layout_width="@dimen/H_margen"
                        android:layout_height="@dimen/H_margen" />

                    <Button
                        android:id="@+id/ico_btn2"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:layout_margin="3dp"
                        android:background="@android:color/darker_gray"
                        android:drawableRight="@drawable/coint"
                        android:drawableEnd="@drawable/coint"
                        android:paddingLeft="8dp"
                        android:paddingTop="0dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp"
                        android:text="@string/button_text2" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="167dp"
                        android:src="@drawable/avatar3" />

                    <Space
                        android:layout_width="@dimen/H_margen"
                        android:layout_height="@dimen/H_margen" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="167dp"
                        android:src="@drawable/avatar6" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/ico_btn3"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:layout_margin="3dp"
                        android:background="@android:color/darker_gray"
                        android:drawableRight="@drawable/coint"
                        android:drawableEnd="@drawable/coint"
                        android:paddingLeft="8dp"
                        android:paddingTop="0dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp"
                        android:text="@string/button_text2" />

                    <Space
                        android:layout_width="@dimen/H_margen"
                        android:layout_height="@dimen/H_margen" />

                    <Button
                        android:id="@+id/ico_btn4"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:layout_margin="3dp"
                        android:background="@android:color/darker_gray"
                        android:drawableRight="@drawable/coint"
                        android:drawableEnd="@drawable/coint"
                        android:paddingLeft="8dp"
                        android:paddingTop="0dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp"
                        android:text="@string/button_text2" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="167dp"
                        android:src="@drawable/avatar9"/>

                    <Space
                        android:layout_width="@dimen/H_margen"
                        android:layout_height="@dimen/H_margen" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="167dp"
                        android:src="@drawable/avatar10" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/ico_btn5"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:layout_margin="3dp"
                        android:background="@android:color/darker_gray"
                        android:drawableRight="@drawable/coint"
                        android:drawableEnd="@drawable/coint"
                        android:paddingLeft="8dp"
                        android:paddingTop="0dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp"
                        android:text="@string/button_text2" />

                    <Space
                        android:layout_width="@dimen/H_margen"
                        android:layout_height="@dimen/H_margen" />

                    <Button
                        android:id="@+id/ico_btn6"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:layout_margin="3dp"
                        android:background="@android:color/darker_gray"
                        android:drawableRight="@drawable/coint"
                        android:drawableEnd="@drawable/coint"
                        android:paddingLeft="8dp"
                        android:paddingTop="0dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp"
                        />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>