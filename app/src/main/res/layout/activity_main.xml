<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_ok"
    tools:context=".ActivityMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/fondo_pp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/btStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="691dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/tienda_logo_es"
                    android:contentDescription="Tienda"
                    android:onClick="changeFragment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/btPlay"
                    android:layout_width="101dp"
                    android:layout_height="93dp"
                    android:layout_marginBottom="4dp"
                    android:onClick="changeFragment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/game_logo_es" />

                <ImageView
                    android:id="@+id/btHistorial"
                    android:layout_width="93dp"
                    android:layout_height="99dp"
                    android:layout_marginEnd="112dp"
                    android:layout_marginRight="112dp"
                    android:layout_marginBottom="2dp"
                    android:onClick="changeFragment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/btStore"
                    app:srcCompat="@drawable/historial_logo_es" />

                <ImageView
                    android:id="@+id/btAccount"
                    android:layout_width="83dp"
                    android:layout_height="87dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="89dp"
                    android:layout_marginRight="89dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="changeFragment"
                    android:text="Account"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/btHistorial"
                    app:layout_constraintHorizontal_bias="0.315"
                    app:layout_constraintStart_toEndOf="@+id/btPlay"
                    app:srcCompat="@drawable/usuario_logo_es" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>