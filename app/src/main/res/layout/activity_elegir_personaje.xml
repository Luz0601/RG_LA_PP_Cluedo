        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ivDer"
        app:layout_constraintEnd_toEndOf="@+id/ivDer"
        app:layout_constraintStart_toStartOf="@+id/ivDer"
        app:layout_constraintTop_toTopOf="@+id/ivDer">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

