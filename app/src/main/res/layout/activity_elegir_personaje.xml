                android:textColor="@color/negro"
                android:textSize="@dimen/E_texto"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/img_tick1"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
                android:alpha="0.4"
                android:background="@drawable/tick" />

            <ImageButton
                android:id="@+id/img_x1"
                android:layout_width="@dimen/E_marcador"
                android:layout_height="@dimen/E_marcador"
